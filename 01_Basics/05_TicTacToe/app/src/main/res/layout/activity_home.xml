<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.miguelcr.a04_loginscreen.GameActivity">

    <TextView
        android:text="Welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:id="@+id/textViewWelcome" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_box_empty"
        android:layout_alignTop="@+id/cell5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="cellClicked"
        android:id="@+id/cell6" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_box_empty"
        android:layout_below="@+id/cell4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:onClick="cellClicked"
        android:id="@+id/cell7" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_box_empty"
        android:layout_alignTop="@+id/cell7"
        android:layout_centerHorizontal="true"
        android:onClick="cellClicked"
        android:id="@+id/cell8" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_box_empty"
        android:layout_marginTop="41dp"
        android:id="@+id/cell1"
        android:layout_below="@+id/textViewWelcome"
        android:onClick="cellClicked"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_box_empty"
        android:layout_marginTop="29dp"
        android:id="@+id/cell4"
        android:layout_below="@+id/cell1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_box_empty"
        android:id="@+id/cell3"
        android:layout_alignTop="@+id/cell2"
        android:layout_alignParentRight="true"
        android:onClick="cellClicked"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_box_empty"
        android:id="@+id/cell5"
        android:layout_alignTop="@+id/cell4"
        android:layout_alignLeft="@+id/cell8"
        android:onClick="cellClicked"
        android:layout_alignStart="@+id/cell8" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_box_empty"
        android:id="@+id/cell9"
        android:layout_alignTop="@+id/cell8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_box_empty"
        android:id="@+id/cell2"
        android:layout_alignTop="@+id/cell1"
        android:layout_alignLeft="@+id/cell5"
        android:onClick="cellClicked"
        android:layout_alignStart="@+id/cell5" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPlayer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
